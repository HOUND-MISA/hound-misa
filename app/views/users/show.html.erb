                       <%if counter_a==6%>
                       <%= link_to "View all organized events", "", :onclick => "$('#organized').click()" %>
                       <%elsif counter_a==0%>
                       No event attended
                       <%elsif counter_a<6%>

                       <%end%>
                       </center>
