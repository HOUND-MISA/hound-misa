                                    <!--Details 1 -->
                          <div class="row details" >
                              <div class="col-md-6 smallFont" >
                                <%= pending_event.start_date.strftime('%B %d') %>
                                <% if false %>
                                  <%= to_char(pending_event.start_date, 'Month DD') %> 
                                <% end %>
                              </div>
                              <div class="col-md-6 smallFont" >
                              </div>
                          </div>  
                        </div>
                                    <!--End of Details-->
                      </div>

                  <%end%>
                  <%end%>
