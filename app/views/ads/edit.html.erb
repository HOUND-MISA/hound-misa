<div class="container-fluid content-box">
  <h1>Edit Ad Frequency</h1>

  <%= render 'form' %>
  <%= form_for(@ad, url: {action: "update"}) do |f| %>
    <div class="field">
      <%= f.label :frequency %><br>
      <%= f.number_field :frequency, {:min => 0, :max => 100}%> <i>percent</i>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <%= link_to 'Back', admin_dashboard_path %>
</div>