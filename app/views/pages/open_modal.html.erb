<% if !user_signed_in? %>
  <%= render 'pages/modal' %>
<% end %>

<script>
  $(document).ready(function() {
    $('#login').modal("show");
  });
</script>

<% if @reopen_signup %>
<script>
  $(document).ready(function() {
    $('#login').modal("hide");
  });
</script>
  <script>
    $(document).ready(function() {
      $('#signup').modal("show");
    });
  </script>
<% end %>