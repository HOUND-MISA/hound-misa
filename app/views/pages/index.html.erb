

<div class="container">

  <% if user_signed_in? %>
    <% if session[:fb_token].nil? %>
      <p class="navbar-text pull-right" href="#login" data-toggle="modal"><%= link_to "Sign out", destroy_user_session_path %>
    <% else %></p>
      <p class="navbar-text pull-right" href="#login" data-toggle="modal"><%= link_to "Sign out", facebook_logout_path %></p>
    <% end %>
    <p class="navbar-text pull-right" href="#login" data-toggle="modal">Hi <%= current_user.email %>!</p>
  <% else %>
    <a class="navbar-text pull-right" href="#signup" data-toggle="modal">Signup</a>
    <a class="navbar-text pull-right" href="#login" data-toggle="modal">Login</a>
  <% end %>

  <div class="modal fade" id="login" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Login</h4>
        </div>
        <div class="modal-body">
          <%= render :template => 'devise/sessions/new' %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="modal fade" id="signup" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Signup</h4>
        </div>
        <div class="modal-body">
          <%= render :template => 'devise/registrations/new' %>
        </div>
      </div>
    </div>
  </div>

</div>
