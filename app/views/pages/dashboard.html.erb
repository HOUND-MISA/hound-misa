<div class="container-fluid content-box">
<center><h1>Admin Dashboard</h1></center>
<br>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">TAGS</div>

  <!-- Table -->
  <table class="table">
	<tr>
		<th>Photo</th>
		<th>Name</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @tags.each do |tag| %>
	<tr>
		
		<td> <%=  image_tag tag.photo.url(:thumb) %> </td>
		<td> <%= tag.name %> </td>
		<td> <%= link_to "Show", tag_path(tag)  %> </td>
		<td> <%= link_to "Edit", edit_tag_path(tag) %> </td>
		<td> <%= link_to "Delete", tag_path(tag), method: :delete %> </td>
		
	</tr>
	<% end %>
  </table>
</div>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">USERS</div>

  <!-- Table -->
  <table class="table">
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>E-mail</th>
		<th>Actions</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td> <%= user.first_name %> </td>
		<td> <%= user.last_name %> </td>
		<td> <%= user.email %> </td>
		<td> <%= link_to "Show", hound_user_path(user) %> </td>
	</tr>
	<% end %>
  </table>
</div>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><b>PENDING EVENTS</b></div>

  <!-- Table -->
  <table class="table">
	<tr>
		<th>Name</th>
		<th>City</th>
		<th>Start Date</th>
		<th>Start Time</th>
		<th>Actions</th>
	</tr>
	<% @pending_events.each do |event| %>
	<tr>
		<td> <%= event.name %> </td>
		<td> <%= event.city %> </td>
		<!-- for sqlite, use <td> <%= event.start_date.strftime('%B %d, %Y') %> </td>
		<td> <%= event.start_time.strftime('%l:%M %p') %> </td>-->
    <td> <%= to_char(event.start_date, 'Month DD, YYYY') %> </td>
    <td> <%= to_char(event.start_time, 'HH12:MM AM') %> </td>
		<td> <%= link_to "Show", event_path(event) %> </td>
	</tr>
	<% end %>
  </table>
</div>

</div>